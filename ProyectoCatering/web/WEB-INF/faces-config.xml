<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
    <application>
        <resource-bundle>
            <base-name>/Bundle</base-name>
            <var>bundle</var>
        </resource-bundle>
    </application>
    <managed-bean>
        <managed-bean-name>usuarioBean</managed-bean-name>
        <managed-bean-class>beans.UsuarioBean</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>navegacionBean</managed-bean-name>
        <managed-bean-class>beans.NavegacionBean</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    <navigation-rule>
        <from-view-id>index.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>registro</from-outcome>
            <to-view-id>registro.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>galeria</from-outcome>
            <to-view-id>galeria.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>index1.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>ir.pagina.admin</from-outcome>
            <to-view-id>administrador/admin.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>ir.pagina.comun</from-outcome>
            <to-view-id>index.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>registro</from-outcome>
            <to-view-id>index1.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>registro.xhtml</from-view-id><!--desde aqui se van a las otras para las reglas de navegaciuon-->
        <navigation-case>
            <from-outcome>ir.pagina.admin</from-outcome>
            <to-view-id>administrador/admin.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>ir.pagina.comun</from-outcome>
            <to-view-id>index1.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>registro</from-outcome>
            <to-view-id>index.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>login.xhtml</from-view-id><!--desde aqui se van a las otras para las reglas de navegaciuon-->
        <navigation-case>
            <from-outcome>ir.pagina.admin</from-outcome>
            <to-view-id>administrador/admin.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>ir.pagina.comun</from-outcome>
            <to-view-id>index1.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>registro</from-outcome>
            <to-view-id>login.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/administrador/admin.xhtml</from-view-id><!--desde aqui se van a las otras para las reglas de navegaciuon-->
        <navigation-case>
            <from-outcome>ir.pagina.admin</from-outcome>
            <to-view-id>faces/index.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
</faces-config>
